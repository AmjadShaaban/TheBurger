<div class='container'>
  <div id="left">
    <ul>
      {{#each burgers}}
      <li>
        {{#unless devoured}}
        {{this.id}}. {{this.burger_name}}
        <button class="devour" data-id="{{this.id}}">
          Devour
        </button>
        {{/unless}}
      </li>
      {{/each}}
    </ul>
  </div>
  <div id="middle-top">

    <h1>Devour Da Burger!</h1>
    <img src='assets/img/VeggieBurger.png' id='bubber'>
  </div>
  <div id="middle-bottom">
    <form class="create-form">
      <div class="form-group">
        <input type="text" id="burger-name" name="name">
      </div>
      <button type="submit" id='add-burger' class='btn btn-warning btn-lg btn-block'>Submit</button>
    </form>

    <h3>Make The burger!</h3>
  </div>
  <div id="right">
    <ul>
      {{#each burgers}}
      <li>
        {{#if devoured}}
        {{this.id}}. {{this.burger_name}}
        {{/if}}
      </li>
      {{/each}}
    </ul>
  </div>
</div>
<footer>
  <hr>
  <a href='https://github.com/amjadshaaban/TheBurger'>GitHub</a>
</footer>